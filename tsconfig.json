{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "incremental": true,
    "inlineSources": true,
    "newLine": "lf",
    "outDir": "dist",
    "preserveConstEnums": true,
    "sourceMap": true,
    "stripInternal": true,
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
    "resolveJsonModule": true,
  },
  "include": [
    "src/index.ts",
    "src/controllers/dcatController.ts",
    "src/controllers/hierarchicalViewController.ts",
    "src/fragmenters/hierarchical.ts",
    "src/utils/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
